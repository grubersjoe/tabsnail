{
  "arrowParens": "avoid",
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    }
  ],
  "plugins": ["prettier-plugin-svelte", "@trivago/prettier-plugin-sort-imports"],
  "printWidth": 100,
  "proseWrap": "always",
  "semi": false,
  "singleQuote": true
}
