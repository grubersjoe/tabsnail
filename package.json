{
  "name": "tabsnail",
  "version": "0.1.0",
  "description": "Browser extension to display the tab bar in a snail layout",
  "author": "Jonathan Gruber <gruberjonathan@gmail.com>",
  "private": true,
  "repository": "https://github.com/grubersjoe/tabsnail",
  "bugs": "https://github.com/grubersjoe/tabsnail/issues",
  "type": "module",
  "scripts": {
    "build": "wxt build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "check": "pnpm exec prettier -c . && pnpm exec tsc && pnpm lint",
    "dev": "wxt",
    "dev:chrome": "wxt -b chrome",
    "dev:firefox": "wxt -b firefox",
    "format": "prettier --write .",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:svelte",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '{src,public}/**/*.{css,scss}'",
    "lint:svelte": "svelte-check",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "zip": "wxt zip",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@tsconfig/svelte": "^5.0.7",
    "@types/bootstrap": "^5.2.10",
    "@wxt-dev/module-svelte": "^2.0.3",
    "bootstrap": "^5.3.8",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass-embedded": "^1.97.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "svelte": "^5.53.5",
    "svelte-check": "^4.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.55.0",
    "wxt": "^0.20.17"
  }
}
