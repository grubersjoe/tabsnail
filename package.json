{
  "name": "tabsnail",
  "version": "0.1.0",
  "description": "Browser extension to display the tab bar in a snail layout",
  "author": "Jonathan Gruber <gruberjonathan@gmail.com>",
  "private": true,
  "repository": "https://github.com/grubersjoe/tabsnail",
  "bugs": "https://github.com/grubersjoe/tabsnail/issues",
  "type": "module",
  "scripts": {
    "build": "wxt build",
    "build:chrome": "wxt build -b chrome",
    "build:firefox": "wxt build -b firefox",
    "check": "pnpx prettier -c . && pnpm exec tsc && pnpm lint",
    "dev": "wxt",
    "dev:chrome": "wxt -b chrome",
    "dev:firefox": "wxt -b firefox",
    "format": "prettier --write .",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint '{src,public}/**/*.{css,scss}'",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "zip": "wxt zip",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bootstrap": "^5.2.10",
    "bootstrap": "^5.3.8",
    "eslint": "^9.38.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "wxt": "^0.20.6"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 100,
    "proseWrap": "always",
    "singleQuote": true,
    "semi": false,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
